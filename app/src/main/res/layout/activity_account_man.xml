<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.buct.zxxe.beijingguider.AboutusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a85ff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_button" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical"
            android:text="账户管理"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />

    <TextView
        android:id="@+id/text_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="修改密码"
        android:textSize="15dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />


    <CheckBox
        android:id="@+id/checkbox_remember_pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="记住密码"
        android:textSize="15dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />


    <CheckBox
        android:id="@+id/check_auto_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="自动登录"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />




</LinearLayout>
