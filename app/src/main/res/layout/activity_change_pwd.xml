<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.buct.zxxe.beijingguider.AboutusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a85ff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changepwd_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_button" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:text="原密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_raw_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:hint="请输入原密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:text="新密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:hint="请输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:text="新密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_more_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_edit1"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:hint="请再次输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset_change_pwd"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="重置修改"
            android:textColor="@color/side_bar_pressed"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_confirm_change_pwd"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/side_bar_pressed"
            android:textSize="15dp" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />


</LinearLayout>
